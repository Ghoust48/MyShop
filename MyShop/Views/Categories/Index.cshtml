@model IEnumerable<MyShop.Models.CategoryModel>

@{
    ViewBag.Title = "Категории";
}

<h2>Категории</h2>
<a asp-action="Create">Добавить категорию</a>
<h2>Продукты</h2>
<table class="table">
    <tr>
        <th>Название</th>
        <th>Описание</th>
        <th>Картинка</th>
        <th></th>
    </tr>
    @foreach (var category in Model)
    {
        <tr>
            <td>@category.Name</td>
            <td>@category.Description</td>
            <td>@category.ImageName</td>
            <td>
                <form asp-action="Delete" asp-route-id="@category.Id" method="post">
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@category.Id">Изменить</a>
                    <button type="submit" class="btn btn-sm btn-danger">
                        Удалить
                    </button>
                </form>
            </td>
        </tr>
    }
</table>

