<!-- Feature Product Section Start -->
<div class="product-section section mb-70">
    <div class="container">
        <div class="row">

            <!-- Section Title Start -->
            <div class="col-12 mb-40">
                <div class="section-title-one" data-title="FEATURED ITEMS">
                    <h1>FEATURED ITEMS</h1>
                </div>
            </div><!-- Section Title End -->
            <!-- Product Tab Filter Start -->
            <div class="col-12 mb-30">
                <div class="product-tab-filter">
                    <!-- Tab Filter Toggle -->
                    <button class="product-tab-filter-toggle">showing: <span></span><i class="icofont icofont-simple-down"></i></button>

                    @await Component.InvokeAsync("Category")
                </div>
            </div><!-- Product Tab Filter End -->
            <!-- Product Tab Content Start -->
            <div class="col-12">
                <div class="tab-content">
                    <div class="tab-pane fade show active" id="tab-all">
                        <div class="product-slider-wrap product-slider-arrow-one">
                            <!-- Product Slider Start -->
                            <div class="product-slider product-slider-4">
                                <!-- Product Start -->
                                @foreach (var item in Model.Products)
                                {
                                    <div class="col pb-20 pt-10">
                                        @{
                                            await Html.RenderPartialAsync("_Product", item);
                                        }
                                    </div>
                                }
                                <!-- Product End -->
                            </div>
                            <!-- Product Slider End -->
                        </div>
                    </div>
                    <div class="tab-pane fade " id="tab-@Model.Categories[0].Name">
                        <div class="product-slider-wrap product-slider-arrow-one">
                            <!-- Product Slider Start -->
                            <div class="product-slider product-slider-4">
                                <!-- Product Start -->
                                @foreach (var item in Model.Products
                                    .Where(p => p.Category.Name == Model.Categories[0].Name))
                                {
                                    <div class="col pb-20 pt-10">
                                        @{
                                            await Html.RenderPartialAsync("_Product", item);
                                        }
                                    </div>
                                }
                                <!-- Product End -->
                            </div>
                            <!-- Product Slider End -->
                        </div>
                    </div>
                    <div class="tab-pane fade " id="tab-@Model.Categories[1].Name">
                        <div class="product-slider-wrap product-slider-arrow-one">
                            <!-- Product Slider Start -->
                            <div class="product-slider product-slider-4">
                                <!-- Product Start -->
                                @foreach (var item in Model.Products
                                    .Where(p => p.Category.Name == Model.Categories[1].Name))
                                {
                                    <div class="col pb-20 pt-10">
                                        @{
                                            await Html.RenderPartialAsync("_Product", item);
                                        }
                                    </div>
                                }
                                <!-- Product End -->
                            </div>
                            <!-- Product Slider End -->
                        </div>
                    </div>
                    <div class="tab-pane fade " id="tab-@Model.Categories[2].Name">
                        <div class="product-slider-wrap product-slider-arrow-one">
                            <!-- Product Slider Start -->
                            <div class="product-slider product-slider-4">
                                <!-- Product Start -->
                                @foreach (var item in Model.Products
                                    .Where(p => p.Category.Name == Model.Categories[2].Name))
                                {
                                    <div class="col pb-20 pt-10">
                                        @{
                                            await Html.RenderPartialAsync("_Product", item);
                                        }
                                    </div>
                                }
                                <!-- Product End -->
                            </div>
                            <!-- Product Slider End -->
                        </div>
                    </div>
                </div>
            </div><!-- Product Tab Content End -->

        </div>
    </div>
</div>
<!-- Feature Product Section End -->