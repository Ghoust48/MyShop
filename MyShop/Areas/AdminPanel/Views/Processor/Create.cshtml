@model Processor

@{
    ViewBag.Title = "Создание процессора";
}

<h2>@ViewBag.Title</h2>

<form asp-area="AdminPanel" asp-action="Create" asp-controller="Processor">
    <div asp-validation-summary="All" class="text-danger"></div>
    
    <div class="form-row">
        <div class="form-group col">
            <label asp-for="Platform" class="control-label"></label>
            <input asp-for="Platform" class="form-control"/>
        </div>
        <div class="form-group col">
            <label asp-for="ProcessorType" class="control-label"></label>
            <input asp-for="ProcessorType" class="form-control"/>
        </div>
    </div>
    
    <div class="form-row">
        <div class="form-group col">
            <label asp-for="ClockSpeed" class="control-label"></label>
            <input asp-for="ClockSpeed" class="form-control"/>
        </div>
        <div class="form-group col">
            <label asp-for="Cores" class="control-label"></label>
            <input asp-for="Cores" class="form-control"/>
        </div>
    </div>
    
    <div class="form-row">
        <div class="form-group col">
            <label asp-for="Microarchitecture" class="control-label"></label>
            <input asp-for="Microarchitecture" class="form-control"/>
        </div>
        <div class="form-group col">
            <label asp-for="TechnicalProcess" class="control-label"></label>
            <input asp-for="TechnicalProcess" class="form-control"/>
        </div>
    </div>
    
    <div class="form-row">
        <div class="form-group col">
            <label asp-for="GraphicsAccelerator" class="control-label"></label>
            <input asp-for="GraphicsAccelerator" class="form-control"/>
        </div>
        <div class="form-group col">
            <label asp-for="GPUFrequency" class="control-label"></label>
            <input asp-for="GPUFrequency" class="form-control"/>
        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-outline-secondary"/>
    </div>
</form>