@model Screen

@{
    ViewBag.Title = "Изменение экрана";
}

<h2>@ViewBag.Title</h2>
<form asp-area="AdminPanel" asp-action="Edit" asp-controller="Screen">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <input type="hidden" asp-for="Id"/>
    </div>
    <div class="form-group">
        <label asp-for="Diagonal" class="control-label"></label>
        <input asp-for="Diagonal" value="@Model.Diagonal" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Resolution" class="control-label"></label>
        <input asp-for="Resolution" value="@Model.Resolution" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Surface" class="control-label"></label>
        <input asp-for="Surface" value="@Model.Surface" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="MatrixType" class="control-label"></label>
        <input asp-for="MatrixType" value="@Model.MatrixType" class="form-control"/>
    </div>
    <div class="form-check">
        <input asp-for="Multitouch" value="@Model.Multitouch" class="form-check-input"/>
        <label asp-for="Multitouch" class="form-check-label"></label>
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-outline-secondary"/>
    </div>
</form>
