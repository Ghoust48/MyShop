@model IEnumerable<MyShop.Models.Category>

@{
    ViewBag.Title = "Категории";
}

<h2>@ViewBag.Title</h2>
<div style="padding: 1rem 0 1rem">
    <a asp-area="AdminPanel" asp-controller="Categories" asp-action="Create" class="btn btn-sm btn-primary" >Добавить категорию</a>
</div>
<table class="table">
    <tr>
        <th>Название</th>
        <th>Описание</th>
        <th>Картинка</th>
        <th></th>
    </tr>
    @foreach (var category in Model)
    {
        <tr>
            <td>@category.Name</td>
            <td>@category.Description</td>
            <td>@category.ImageName</td>
            <td>
                <form asp-action="Delete" asp-route-id="@category.Id" method="post">
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@category.Id">Изменить</a>
                    <button type="submit" class="btn btn-sm btn-danger">
                        Удалить
                    </button>
                </form>
            </td>
        </tr>
    }
</table>