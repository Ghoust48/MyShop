@model Housing

@{
    ViewBag.Title = "Создание корпуса";
}

<h2>@ViewBag.Title</h2>

<form asp-area="AdminPanel" asp-action="Create" asp-controller="Housing">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-row">
        <div class="form-group col">
            <label asp-for="Design" class="control-label"></label>
            <input type="text" asp-for="Design" class="form-control"/>
        </div>
        <div class="form-group col">
            <label asp-for="Colour" class="control-label"></label>
            <input type="text" asp-for="Colour" class="form-control"/>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col">
            <label asp-for="BodyMaterial" class="control-label"></label>
            <input type="text" asp-for="BodyMaterial" class="form-control"/>
        </div>
        <div class="form-group col">
            <label asp-for="GlassConstruction" class="control-label"></label>
            <input type="text" asp-for="GlassConstruction" class="form-control"/>
        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-outline-secondary"/>
    </div>
</form>