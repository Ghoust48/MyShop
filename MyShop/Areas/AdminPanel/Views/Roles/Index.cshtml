@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewBag.Title = "Список ролей";
}
 
<h2>@ViewBag.Title</h2>
<div style="padding: 1rem 0 1rem">
    <a class="btn btn-sm btn-primary" asp-action="Create">Добавить роль</a>
    <a class="btn btn-sm btn-primary" asp-action="UserList">Список пользователей</a>
</div>
<table class="table">
    <tr>
        <th>Название</th>
        <th></th>
    </tr>
    @foreach (var role in Model)
    {
        <tr>
            <td>@role.Name</td>
            <td>
                <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Удалить
                    </button>
                </form>
            </td>
        </tr>
    }
</table>
