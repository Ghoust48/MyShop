@model IEnumerable<MyShop.Models.User>
@{
    ViewBag.Title = "Список пользователей";
}
 
<h2>@ViewBag.Title</h2>

<div style="padding: 1rem 0 1rem">
    <a asp-area="AdminPanel" asp-controller="Users" asp-action="Create" class="btn btn-sm btn-primary">Добавить пользователя</a>
</div>

<table class="table">
    <tr>
        <th>Имя</th>
        <th>Фамилия</th>
        <th>Email</th>
        <th>Год</th>
        <th></th>
    </tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.FirstName</td>
            <td>@user.LastName</td>
            <td>@user.Email</td>
            <td>
                <form asp-area="AdminPanel" asp-action="Delete" asp-route-id="@user.Id" method="post">
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">Изменить</a>
                    <a class="btn btn-sm btn-primary" asp-action="ChangePassword" asp-route-id="@user.Id">Сменить пароль</a>
                    <button type="submit" class="btn btn-sm btn-danger">
                        Удалить
                    </button>
                </form>
            </td>
        </tr>
    }
</table>