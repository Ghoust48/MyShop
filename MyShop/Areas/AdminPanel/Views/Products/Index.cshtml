@model IEnumerable<Product>

@{
    ViewBag.Title = "Продукты";
}

<h2>@ViewBag.Title</h2>
<div style="padding: 1rem 0 1rem">
    <a asp-area="AdminPanel" asp-controller="Products" asp-action="Create" class="btn btn-sm btn-primary" >Добавить продукт</a>
</div>
<table class="table">
    <tr>
        <th>Название</th>
        <th>Краткое описание</th>
        <th>Цена</th>
        <th>Количество на складе</th>
        <th>Название категории</th>
        <th></th>
    </tr>
    @foreach (var product in Model)
    {
        <tr>
            <td>@product.Name</td>
            <td>@product.Summary</td>
            <td>@product.UnitPrice</td>
            <td>@product.UnitsInStock</td>
            <td>@product.Category.Name</td>
            <td>
                <form asp-area="AdminPanel" asp-action="Delete" asp-route-id="@product.Id" method="post">
                    <a class="btn btn-sm btn-primary" asp-area="AdminPanel" asp-action="Edit" asp-route-id="@product.Id">Изменить</a>
                    <button type="submit" class="btn btn-sm btn-danger">
                        Удалить
                    </button>
                </form>
            </td>
        </tr>
    }
</table>