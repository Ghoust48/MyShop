@model Battery

@{
    ViewBag.Title = "Изменение батареи";
}

<h2>Изменение продукта</h2>
<form asp-area="AdminPanel" asp-action="Edit" asp-controller="Battery">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <input type="hidden" asp-for="Id"/>
    </div>
    <div class="form-row">
        <div class="form-group col">
            <label asp-for="Type" class="control-label"></label>
            <input type="text" asp-for="Type" value="@Model.Type" class="form-control"/>
        </div>
        <div class="form-group col">
            <label asp-for="Capacity" class="control-label"></label>
            <input type="text" asp-for="Capacity" value="@Model.Capacity" class="form-control"/>
        </div>
        <div class="form-group col">
            <label asp-for="MaxWorkingHours" class="control-label"></label>
            <input type="text" asp-for="MaxWorkingHours" value="@Model.MaxWorkingHours" class="form-control"/>
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-outline-secondary"/>
    </div>
</form>
