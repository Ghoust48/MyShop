@model Battery

@{
    ViewBag.Title = "Создание батареи";
}

<h2>@ViewBag.Title</h2>

<form asp-area="AdminPanel" asp-action="Create" asp-controller="Battery">
    <div asp-validation-summary="All" class="text-danger"></div>
    
    <div class="form-row">
        <div class="form-group col">
            <label asp-for="Type" class="control-label"></label>
            <input type="text" asp-for="Type" class="form-control"/>
        </div>
        <div class="form-group col">
            <label asp-for="Capacity" class="control-label"></label>
            <input type="text" asp-for="Capacity" class="form-control"/>
        </div>
        <div class="form-group col">
            <label asp-for="MaxWorkingHours" class="control-label"></label>
            <input type="text" asp-for="MaxWorkingHours" class="form-control"/>
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-outline-secondary"/>
    </div>
</form>